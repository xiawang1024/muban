@import './wap/index.styl'

html,body
    width: 750px    
body
    position absolute
    top 0
    bottom 0
    left 0
    width: 750px
    padding 0 20px 105px 20px
    background: url('../img/icon-bg.png') center center no-repeat
    background-size: cover
    box-sizing: border-box
    .g-bd
        position absolute
        top 0
        bottom 105px
        left 20px
        right 20px     
        padding 30px   
        background: rgba(255,255,255,0.7)
        box-sizing: border-box
        .signUp-pre
            width: 100%
            .img
                display block
                width: 100%
                height: 418px
            .text-wrap
                width: 100%                
                padding 0 35px
                font-size: 26px
                box-sizing: border-box
                .text
                    margin-top: 46px
                    line-height: 1.5
                    .blue
                        color #0081dc
            .signBtn
                display: block
                width: 444px
                height: 60px
                text-align: center
                line-height: 60px
                margin 150px auto 0
                border none 
                border-radius: 8px
                outline: none
                font-size: 32px
                color #ffffff
                background: #0081dc  
                &:active
                    background:#0360a2              
            .ft-logo
                display: block
                margin 120px auto 0
                width: 242px
                height: 65px
        .signUp
            width: 100%
            .avatar-wrap
                width: 180px
                height: 180px
                margin 60px auto 0
                font-size: 0
                .avatar
                    width: 178px
                    height: 178px
                    border 2px solid #0081dc
                    border-radius: 50%
                    border-top-color #ffffff
                    border-left-color #ffffff
            .form
                width: 440px
                margin 80px auto 0
                .star                           
                    color #f00 
                .ipt-wrap
                    display flex
                    align-items: center
                    width: 100%
                    margin-bottom: 40px
                    box-sizing: border-box
                    .label
                        width: 110px
                        font-size: 29px                
                    .ipt
                        width: 330px
                        background: none 
                        // border none 
                        outline: none
                        border-bottom-1px(#999)
            .tips-wrap
                width: 100%
                padding 0 30px
                box-sizing: border-box
                .star
                    font-size: 26px
                    color #f00
                .text
                    font-size: 26px
                    line-height: 1.5
                    color #666
            .agree-wrap
                width: 100%
                padding 0 30px
                margin-top: 30px
                box-sizing: border-box
                .icon-select
                    position relative
                    display inline-block
                    width: 29px
                    height: 29px                    
                    background: url('../img/icon-select-no.png') center center no-repeat
                    background-size: cover                   
                    &.z-cur
                        background: url('../img/icon-select-yes.png') center center no-repeat
                        background-size: cover
                .protocol
                    display none
                .text
                    line-height: 1.5
                    font-size: 28px
                    color #333
            .signUpBtn
                display block
                width: 440px
                height: 60px
                margin: 30px auto 0
                line-height: 60px
                font-size: 32px
                border none
                border-radius: 8px
                outline: none
                background: #0081dc
                color: #ffffff
                &:active
                    background: #0765a7
            .ft-logo
                display: block
                margin 120px auto 0
                width: 242px
                height: 65px
                        


        

    




    
