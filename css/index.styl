@import './wap/index.styl'

html,body
    width: 750px    
    // overflow-x hidden
    background-color #eb473d
body
    width: 750px 
    padding: 70px 0 100px
    background: url('../img/icon-bg.png') top center no-repeat
    background-size cover 
    overflow-x: hidden
    box-sizing: border-box       
    .g-hd
        width: 100%
        height: 310px               
        background: url('../img/icon-top.png') center center no-repeat
        background-size: 618px auto
    .g-bd
        width: 100%
        margin-top: 48px
        .m-lottery-wrap
            position relative
            width: 600px
            height: 350px
            margin-left: 75px
            background: url('../img/icon-tips.png') center center no-repeat
            background-size: cover
            .m-lottery-title
                position absolute
                top 30px
                left 36px
                font-size: 24px
                color #570623
            .m-lottery-tips
                position absolute
                top 108px
                left 0
                width: 100%
                text-align: center
                font-size: 38px
                color #ffff3e
            .m-lottery
                position absolute
                bottom 40px
                left 29.5px
                width: 550px
                height: 128px
                background: center center no-repeat
                background-size: 100%
    .g-ft
        width: 100%
        margin-top: 50px
        color #ffffff
        .ft-title
            width: 100%
            text-align: center
        .info-wrap
            width: 530px
            margin 40px auto 0
            font-size: 28px
            line-height: 1.3
            .desc
                margin-top 4px
    .g-right
        width: 530px
        margin 28px auto 0
        font-size: 28px
        color #ffffff
        

    




    
