@import './wap/index.styl'

html
    position absolute
    top 0
    bottom 0
    left 0
    height: 100%
    width: 750px  
    min-height: 100%  
body
    width: 750px
    min-height: 100%
    padding 0 20px 105px 20px
    background: url('../img/icon-bg.png') center center no-repeat
    background-repeat: repeat-y
    background-size: cover
    box-sizing: border-box
    .g-bd        
        padding 30px   
        background: rgba(255,255,255,0.8)
        box-sizing: border-box
        .signUp-pre            
            width: 100%
            .img
                display block
                width: 100%
                height: 418px
            .text-wrap
                width: 100%                
                padding 0 35px
                font-size: 26px
                box-sizing: border-box
                .text
                    margin-top: 46px
                    line-height: 1.5
                    .blue
                        color #0081dc
            .signBtn
                display: block
                width: 444px
                height: 60px
                text-align: center
                line-height: 60px
                margin 150px auto 0
                border none 
                border-radius: 8px
                outline: none
                font-size: 32px
                color #ffffff
                background: #0081dc  
                &:active
                    background:#0360a2              
            .ft-logo
                display: block
                margin 120px auto 0
                width: 242px
                height: 65px
        .signUp
            width: 100%
            .avatar-wrap
                width: 180px
                height: 180px
                margin 120px auto 0
                font-size: 0
                .avatar
                    width: 178px
                    height: 178px
                    border 2px solid #0081dc
                    border-radius: 50%
                    border-top-color #ffffff
                    border-left-color #ffffff
            .form
                width: 440px
                margin 110px auto 0
                .star                           
                    color #f00 
                .ipt-wrap
                    display flex
                    align-items: center
                    width: 100%
                    margin-bottom: 40px
                    box-sizing: border-box
                    .label
                        width: 110px
                        font-size: 29px                
                    .ipt
                        width: 330px
                        background: none 
                        // border none 
                        outline: none
                        border-bottom-1px(#999)
            .tips-wrap
                width: 100%
                padding 0 30px
                box-sizing: border-box
                .star
                    font-size: 26px
                    color #f00
                .text
                    font-size: 26px
                    line-height: 1.5
                    color #666
            .agree-wrap
                width: 100%
                padding 0 30px
                margin-top: 60px
                box-sizing: border-box
                font-size: 0               
                .icon-select                    
                    position relative
                    display inline-block
                    width: 29px
                    height: 29px                    
                    background: url('../img/icon-select-no.png') center center no-repeat
                    background-size: cover                               
                input:checked + label 
                    background: url('../img/icon-select-yes.png') center center no-repeat
                    background-size: cover
                .protocol
                    display inline-block
                    width: 0
                    height: 0
                .text
                    margin-left: 6px
                    line-height: 1.5
                    font-size: 28px
                    color #333
            .signUpBtn
                display block
                width: 440px
                height: 60px
                margin: 120px auto 0
                line-height: 60px
                font-size: 32px
                border none
                border-radius: 8px
                outline: none
                background: #0081dc
                color: #ffffff
                &:active
                    background: #0765a7
            .ft-logo
                display: block
                margin 120px auto 0
                width: 242px
                height: 65px
        .answer            
            width: 100%
            padding 50px 40px
            box-sizing: border-box            
            .title
                font-size: 34px
                line-height: 1.5            
            .tips
                width: 100%
                margin-top: 20px
                text-align: center
                font-size: 20px
                color #fa2c2c
            .form
                display: block
                width: 512px
                margin 150px auto 0
                // overflow hidden
                .select-wrap
                    display: flex
                    align-items: center
                    margin-bottom: 50px
                    .title
                        width 460px
                        font-size: 29px
                        color #333333
                        border-bottom-1px(#b6b6b6)
                        .order
                            color #0081dc
                        .text
                            font-size: 29px
                            color #333333
                    .select
                        width: 45px
                        margin-left: 6px
                        font-size: 0
                        .icon-select
                            display inline-block
                            width: 44px
                            height: 44px
                            background: url('../img/icon-answer-no.png') center center no-repeat
                            background-size: cover                           
                        input
                            display inline-block
                            width: 0
                            height: 0
                        input:checked + label                     
                            background: url('../img/icon-answer-yes.png') center center no-repeat
                            background-size: cover
            .u-btn
                display:block
                width: 440px
                height: 60px
                margin: 280px auto 0
                text-align: center
                line-height: 60px
                border-radius: 8px
                font-size: 32px
                color #ffffff
                background: #0081dc
                overflow hidden
                &:active
                    background:#0360a2
            .ft-logo                               
                display: block
                margin 120px auto 0
                width: 242px
                height: 65px
        .vote
            width: 100%
            padding 50px 40px
            box-sizing: border-box            
            .title
                font-size: 34px
                line-height: 1.5   
            .time 
                margin-top: 8px
                font-size: 22px  
                color #333333       
            .tips
                width: 100%
                margin-top: 20px
                text-align: center
                font-size: 20px
                color #fa2c2c
            .form
                display: block
                width: 512px
                margin 100px auto 0                
                .select-wrap
                    display: flex
                    align-items: center
                    margin-bottom: 60px
                    .title
                        position relative
                        width 460px
                        font-size: 29px
                        color #333333                        
                        .order
                            color #0081dc
                        .text
                            font-size: 29px
                            color: #333
                        .vote-info
                            position absolute
                            right 0
                            bottom: 0
                            .num-wrap
                                font-size: 18px
                                .num
                                    font-size: 26px
                            .percent
                                font-size: 26px
                                color: #ff2525
                        .progress-wrap
                            position absolute
                            bottom -10px
                            left 0
                            right 0
                            width: 100%
                            height: 10px
                            border-radius: 6px
                            background: #b6b6b6
                            .progress
                                position absolute
                                left 0
                                top 0                                
                                height: 10px
                                border-radius 6px
                                background:linear-gradient(to right, #5bd9f2 , #96fe58) 
                    .select
                        width: 45px
                        margin-left: 6px
                        font-size: 0
                        .icon-select
                            display inline-block
                            width: 44px
                            height: 44px
                            background: url('../img/icon-answer-no.png') center center no-repeat
                            background-size: cover                           
                        input
                            display inline-block
                            width: 0
                            height: 0
                        input:checked + label                     
                            background: url('../img/icon-answer-yes.png') center center no-repeat
                            background-size: cover
            .u-btn
                display:block
                width: 440px
                height: 60px
                margin: 100px auto 0
                text-align: center
                line-height: 60px
                border-radius: 8px
                font-size: 32px
                color #ffffff
                background: #0081dc
                overflow hidden
                &:active
                    background:#0360a2
            .ft-logo                               
                display: block
                margin 120px auto 0
                width: 242px
                height: 65px
                



        

    




    
